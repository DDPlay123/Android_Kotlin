<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/toast"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/toast" />

        <Button
            android:id="@+id/custom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/custom_toast" />

        <Button
            android:id="@+id/snackBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_snackBar" />
        <Button
            android:id="@+id/dialog1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_alertdialog" />

        <Button
            android:id="@+id/dialog2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/table_alertdialog" />

        <Button
            android:id="@+id/dialog3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/single_button_alertdialog" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>